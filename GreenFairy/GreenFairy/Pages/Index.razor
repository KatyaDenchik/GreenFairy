@page "/"
@inject IJSRuntime js
<PageTitle>Index</PageTitle>
<AuthorizeView>
	<Authorized>
		<h1>Вітаю, @context.User.Identity.Name!</h1>
	</Authorized>
	<NotAuthorized>
		<h1>Вітаю!</h1>
	</NotAuthorized>

</AuthorizeView>
<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
	<Authorized>
		<br />
		<button class ="btn btn-outline-primary"  @onclick="DisplayGreetingAleart"></button>
	</Authorized>
</AuthorizeView>

@code{
	[CascadingParameter]
	private Task<AuthenticationState> authenticationState { get; set; }

	private async Task DisplayGreetingAleart()
	{
		var status = await authenticationState;
		var message = $"Вітаю {status.User.Identity.Name}";
		await js.InvokeVoidAsync("alert", message);
	}
}
